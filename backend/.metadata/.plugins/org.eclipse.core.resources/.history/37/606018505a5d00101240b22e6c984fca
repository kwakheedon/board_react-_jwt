package com.example.board.domain.post.dto;

import com.example.board.domain.post.Post;

import lombok.Builder;
import lombok.Getter;


@Getter
public class PostAllRes {
	  private  Long postId;
	  private  String title;
	  private  String writerNickname;
	  
	  @Builder
	    private PostAllRes(Long postId, String title, String writerNickname) {
	        this.postId = postId;
	        this.title = title;
	        this.writerNickname = writerNickname;
	    }
	  
	  public static PostAllRes from(Post post) {
	        return PostAllRes.builder()
	                .postId(post.getId()) // 게시글의 ID
	                .title(post.getTitle()) // 게시글의 제목
	                .writerNickname(post.getMember().getNickname()) // 작성자의 닉네임
	                .build();
	    }
	}
	
}
